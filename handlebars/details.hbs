<div>
  <div class="nav prev">
    <img src="/images/nav-prev.png" alt="prev">
  </div>
  <figure>
    <img src="/images/{{image}}" alt="{{name}}">
  </figure>
  <article>
    <a class="close" href="*">+</a>
    <h1>{{name}}</h1>
    <p>{{description}}</p>
    <footer>
      <h2>${{formatPrice price}}</h2>
      <a class="add_cart" href="#">Add to cart</a>
    </footer>
  </article>
  <aside>
    <h3>Nutritional Information</h3>
    <table>
      <tbody>
        <tr>
          <td>Protein</td>
          <td>{{formatNutrition nutrition.protein}}</td>
        </tr>
        <tr>
          <td>Fat (total)</td>
          <td>{{formatNutrition nutrition.fat}}</td>
        </tr>
        <tr>
          <td>Carbohydrate</td>
          <td>{{formatNutrition nutrition.carbohydrate}}</td>
        </tr>
        <tr>
          <td>Energy (kj)</td>
          <td>{{formatNutrition nutrition.energykj}}</td>
        </tr>
        <tr>
          <td>Energy (kcal)</td>
          <td>{{formatNutrition nutrition.energykcal}}</td>
        </tr>
        <tr>
          <td>Sugar</td>
          <td>{{formatNutrition nutrition.sugar}}</td>
        </tr>
      </tbody>
    </table>
  </aside>
  <div class="nav next">
    <img src="/images/nav-next.png" alt="next">
  </div>
</div>